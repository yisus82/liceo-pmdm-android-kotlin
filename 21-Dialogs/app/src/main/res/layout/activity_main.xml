<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <Button
        android:id="@+id/btnAlerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_alerta" />

    <Button
        android:id="@+id/btnConfirmacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_confirmacion" />

    <Button
        android:id="@+id/btnSeleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_seleccion" />

    <Button
        android:id="@+id/btnPersonalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogo_personalizado" />

</LinearLayout>